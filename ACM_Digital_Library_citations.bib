@inproceedings{10.1145/3461564.3461591,
author = {Hasan, Md Tanvir and Wolff, Annika and Porras, Jari},
title = {Co-designing recycling solutions on campus: A case study exploring openness, realism and empowerment of users in a Living Lab},
year = {2021},
isbn = {9781450390569},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3461564.3461591},
